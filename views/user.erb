
<div class="about-user">
	<h2 class="text-center"><%= @user.name %>'s Profile and Poetry</h2>
	<p class="text-center">Contact <%= @user.name %> at <%= @user.email %>.</p>
	<div class="signed-in-user row">
		<p class="col-sm-6 text-left"><a href="/users/<%= @user.id %>/edit" class="about-user">Edit Settings</a></p>
		<form class="col-sm-6 text-right" method="POST" action="/logout">
			<input type="submit" value="Log Out">
		</form>
	</div>
</div>

<div class="row">
	<div class="user-post-frame col-sm-4">
		<div class="user-post signed-in-user">
			<h3 class="post-title">Add a new <a href="/posts/new/<%= @user.id %>" class="add-poem-link">poem</a>.</h3>
		</div>
	</div>
	<% @user.posts.reverse_each do |post| %>
		<div class="user-post-frame col-sm-4">
			<div class="user-post">		
				<h4 class="post-title"><%= post.title %></h4>
				<p class="post-content"><%= post.content %></p>
			</div>
		</div>
	<% end %>
</div>



