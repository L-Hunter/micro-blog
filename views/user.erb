

<h2><%= @user.name %>'s Profile Page</h2>

<p>Your Info:</p>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
<p>Password: <%= @user.password %></p>
<p>Id number: <%= @user.id %></p>

<h3>Add a new <a href="/posts/new">post</a>.</h3>

<h3><%= @user.name %>'s Posts</h3>
<% @posts.each do |post| %>
	<h2><%= @post.title %></h2>
	<p><%= @post.content %></p>
<% end %>



<form method="POST" action="/logout">
	<label>Log Out </label>
	<input type="submit" value="Log Out">
</form>

<p><a href="/users/<%= @user.id %>/edit">Change your settings</a></p>
